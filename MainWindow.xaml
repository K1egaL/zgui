<Window x:Class="ZGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZGUI - Zapret Management"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl>
            
            <TabItem Header="Управление">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    
                    <GroupBox Grid.Row="0" Header="Режим работы" Margin="0,0,0,10">
                        <StackPanel>
                            <ComboBox x:Name="ModeComboBox" SelectedIndex="0" Margin="0,0,0,10">
                                <ComboBoxItem Content="general (YouTube+Discord)"/>
                                <ComboBoxItem Content="general_alt (Альтернативный)"/>
                                <ComboBoxItem Content="discord (Только Discord)"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="StartButton" Content="Запуск" 
                                        Width="100" Height="30" Margin="0,0,10,0"
                                        Background="Green" Foreground="White"
                                        Click="StartButton_Click"/>

                                <Button x:Name="StopButton" Content="Стоп" 
                                        Width="100" Height="30"
                                        Background="Red" Foreground="White"
                                        IsEnabled="False"
                                        Click="StopButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                  
                    <GroupBox Grid.Row="1" Header="Настройки" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Режим ipset:" 
                                       Margin="0,0,10,10" VerticalAlignment="Center"/>
                            <ComboBox x:Name="IpsetComboBox" Grid.Row="0" Grid.Column="1"
                                      SelectedIndex="1" Margin="0,0,0,10">
                                <ComboBoxItem Content="none - отключить фильтрацию"/>
                                <ComboBoxItem Content="loaded - использовать список ipset"/>
                                <ComboBoxItem Content="any - фильтровать любой IP"/>
                            </ComboBox>

                            <CheckBox x:Name="GameFilterCheckBox" Grid.Row="1" Grid.Column="1"
                                      Content="Включить фильтр для игр (UDP/TCP порты > 1023)"
                                      Margin="0,0,0,5"/>
                        </Grid>
                    </GroupBox>

                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="ApplyConfigButton" Content="Применить настройки" 
                                Width="150" Height="30" Margin="0,0,10,0"
                                Click="ApplyConfigButton_Click"/>

                        <Button x:Name="UpdateButton" Content="Обновить списки" 
                                Width="150" Height="30"
                                Click="UpdateButton_Click"/>
                    </StackPanel>

                    
                    <GroupBox Grid.Row="3" Header="Информация">
                        <TextBox x:Name="InfoTextBox" IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            
            <TabItem Header="Тестирование">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Тестирование соединения" Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="TestYouTubeButton" Content="Тест YouTube" 
                                        Width="120" Height="30" Margin="0,0,10,0"
                                        Click="TestYouTubeButton_Click"/>

                                <Button x:Name="TestDiscordButton" Content="Тест Discord" 
                                        Width="120" Height="30"
                                        Click="TestDiscordButton_Click"/>
                            </StackPanel>

                            <Border x:Name="TestResultBorder" Background="LightBlue" 
                                    Padding="10" CornerRadius="5"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock x:Name="TestResultText" TextWrapping="Wrap"/>
                                    <ProgressBar x:Name="TestProgressBar" IsIndeterminate="True" 
                                                 Height="10" Margin="0,5,0,0"
                                                 Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

            
                    <GroupBox Grid.Row="1" Header="Диагностика" Margin="0,0,0,10">
                        <Button x:Name="DiagnosticButton" Content="Запустить диагностику" 
                                Width="200" Height="30"
                                Click="DiagnosticButton_Click"/>
                    </GroupBox>

              
                    <GroupBox Grid.Row="2" Header="Логи тестирования">
                        <TextBox x:Name="TestLogTextBox" IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </GroupBox>
                </Grid>
            </TabItem>

           
            <TabItem Header="Логи">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="LogTextBox" IsReadOnly="True" 
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="12"
                             AcceptsReturn="True"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="ClearLogButton" Content="Очистить логи" 
                                Width="120" Height="30" Margin="0,0,10,0"
                                Click="ClearLogButton_Click"/>

                        <Button x:Name="SaveLogButton" Content="Сохранить логи" 
                                Width="120" Height="30"
                                Click="SaveLogButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>